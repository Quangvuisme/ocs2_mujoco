; cartpole parameters
cartpole_parameters
{
  cartMass     2.0
  poleMass     0.2
  poleLength   1.0
  maxInput     5.0
  gravity      9.81
}

; DDP settings
ddp
{
  algorithm                      SLQ

  nThreads                       1

  maxNumIterations               5
  minRelCost                     0.01
  constraintTolerance            1e-3

  displayInfo                    false
