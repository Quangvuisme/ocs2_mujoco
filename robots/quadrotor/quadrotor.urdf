<?xml version="1.0"?>
<robot name="Quadrotor">
  <!-- Based on OCS2 quadrotor example -->
  <!-- State: [x, y, z, roll, pitch, yaw, vx, vy, vz, wx, wy, wz] (12D) -->
  <!-- Input: [Fz, Mx, My, Mz] (4D) -->
  
  <link name="world"/>
  
  <link name="base">
    <inertial>
      <mass value="0.546"/>
      <inertia ixx="0.0023200" ixy="0.0" ixz="0.0" iyy="0.0023200" iyz="0.0" izz="0.0003"/>
      <origin xyz="0 0 0"/>
    </inertial>
  </link>
  
  <joint name="floating_base" type="floating">
    <parent link="world"/>
    <child link="base"/>
    <origin xyz="0 0 1" rpy="0 0 0"/>
  </joint>
  
  <!-- Arm frames for visualization (non-rigid) -->
  <link name="arm_1"/>
  <joint name="arm_1_joint" type="fixed">
    <parent link="base"/>
    <child link="arm_1"/>
    <origin xyz="0.1265 0.0 0.0" rpy="0 0 0"/>
  </joint>
  
  <link name="arm_2"/>
  <joint name="arm_2_joint" type="fixed">
    <parent link="base"/>
    <child link="arm_2"/>
    <origin xyz="0.0 0.1265 0.0" rpy="0 0 0"/>
  </joint>
  
  <link name="arm_3"/>
  <joint name="arm_3_joint" type="fixed">
    <parent link="base"/>
    <child link="arm_3"/>
    <origin xyz="-0.1265 0.0 0.0" rpy="0 0 0"/>
  </joint>
  
  <link name="arm_4"/>
  <joint name="arm_4_joint" type="fixed">
    <parent link="base"/>
    <child link="arm_4"/>
    <origin xyz="0.0 -0.1265 0.0" rpy="0 0 0"/>
  </joint>
</robot>
